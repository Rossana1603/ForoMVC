@using Forum.Persistence.Domain
@using Forum.Web.Properties
@model Forum.Web.Models.PostViewModel

@{
    ViewBag.Title = "AddPost";    
}

<h2>Add New Post</h2>


@using (Html.BeginForm("AddPost", "Post", FormMethod.Post)) 
{
    @Html.HiddenFor(m => m.TopicId)
    @Html.HiddenFor(m => m.Author.Id);
    @Html.HiddenFor(m => m.FromApiUrl);

    @Html.AntiForgeryToken()

    @Scripts.Render("~/bundles/externalscripts")
    @Scripts.Render("~/bundles/customscripts")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="form-horizontal">
    @{} 
    
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Content@*, new { @class = "control-label col-md-2" }*@)
        <div>
            @Html.TextAreaFor(model => model.Content@*, new { @class = "form-control col-md-10" }*@)
            @Html.ValidationMessageFor(model => model.Content)
        </div>
    </div>

       <div class="form-group">
            <div class="col-md-offset-2 col-md-13">
                <input type="submit" value="Create" class="btn btn-default" name="submit"/>
            </div>
        </div>
    </div>
}

<div>    
   @Html.ActionLink("Back to List", "TopicDetail", "Topic", new { id = @Model.TopicId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/toastr.min.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>
    <script type="text/javascript">
    $(function () {

        var chat = $.connection.postHub;
        $.connection.hub.start().done(function () {
            var userName = 'someUserName';
            $("input[name*='submit']").on("click", function () {

                var topícId = parseInt($("input[name*='TopicId']").val());
                var content = $('#Content_ifr').contents().find('body').html();
                var postId = parseInt($("input[name*='Id']").val());
                var authorId = parseInt($("input[name*='Author.Id']").val());
                var fromApiUrl = $("input[name*='FromApiUrl']").val();

                var post = new Object();
                post.Id = null;
                post.TopicId = topicId;
                post.Content = content;
                post.Author = null;
                post.Tags = null;
                post.AuthorId = authorId;

                alert(authorId);

                $.ajax({
                    url: baseUrl + 'api/post/',
                    type: 'POST',
                    dataType: 'json',
                    data: post,
                    success: function (data) {
                        alert(data.Id);
                    }
                });

                chat.server.NotifyNewPost(userName);
            });
        });

        chat.client.notifyNewPostMessageCount = function (messageCount) {
            //Add logic to notify message
            alert(messageCount);
        };
    });
</script>

}


