@using Forum.Persistence.Domain
@model Forum.Web.Models.TopicViewModel

@{
    ViewBag.Title = "AddTopic";
}

<h2>Add New Topic</h2>


@using (Html.BeginForm("AddTopic", "Topic",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div>
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
            <div>
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.CreateDate, new { @class = "control-label col-md-2" })
            <div>
                @Html.TextBoxFor(model => model.CreateDate, new { @class = "form-control col-md-10" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "TopicList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
