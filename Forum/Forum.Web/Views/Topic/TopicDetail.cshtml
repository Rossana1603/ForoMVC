
@using System.Activities.Statements
@using System.Web.UI.WebControls
@model IEnumerable<Forum.Web.Models.PostViewModel>

@{
    ViewBag.Title = "TopicDetail";
}

<h2>Topic Details</h2>

@if (ViewBag.Error)
{
    <h4>Los servicios estan desconectados / apagados </h4>
}
else
{
    <form role="form">
        <div>
            <div class="col-md-8">
                <input class="form-control" id="inputSearch" placeholder="Search" style="width: 100%; max-width: 100%">
            </div>
            <button id="btnSearch" class="btn btn-primary">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
        </div>
    </form>
    //show title
    <br />
    <div>
        @foreach (var item in Model)
        {
            <div class="panel panel-primary" style="width: 815px">

                <table style="width: 800px">
                    <tr>
                        <td></td>
                        <td>
                            <h3>
                                @*@Html.DisplayFor(modelItem => item.Topic.Title)*@
                                @*@if (Model.Count>0) Html.DisplayFor(modelItem => item.Topic.Title) else "" @*@
                            </h3>
        </td>

    </tr>
    <tr>
        <td style="width: 115px">
            <img src="~/Images/default-avatar.dmbNkD5D-u45r44go_cf0g.png" class="img-responsive" alt="Responsive image" style="width: 100px">
        </td>
        <td style="padding-bottom: 10px">
            @Html.DisplayFor(modelItem => item.Content)
        </td>
    </tr>
    <tr>
        <td>
            <center>
                @*@Html.DisplayFor(modelItem => item.UserName)*@
                            </center>
                        </td>
                        <td>
                            @*Creado en : @Html.DisplayFor(modelItem => item.CreateDate)*@
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="text-align: right">
                            @Html.ActionLink("Comments", "Post", new {/* id=item.PrimaryKey */}) |
                            @Html.ActionLink("Like", "like", new {/* id=item.PrimaryKey */}) |
                        </td>
                    </tr>
                    <tr></tr>
                </table>
            </div>
        }
    </div>
    <p>
            @Html.ActionLink("New", "AddPost")
    </p>
}
